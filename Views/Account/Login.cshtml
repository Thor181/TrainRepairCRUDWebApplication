@model TrainRepairCRUDWebApplication.Models.Authorization.Authorization

<main class="text-lg-center">
    <h2>Вход</h2>

    <form asp-action=Login asp-controller=Account asp-antiforgery=true class=text-lg-center>
        <div class=validation asp-validation-summary=ModelOnly></div>
        <div>

            <div class="form-group">
                <label asp-for=Login>Введите логин</label> <br />
                <input type="text" asp-for=Login /> <br />
                <span asp-validation-for=Login class=text-danger></span>
            </div>


            <div class="form-group">
                <label asp-for=Password>Введите пароль</label> <br />
                <input asp-for=Password /> <br />
                <span asp-validation-for=Password class=text-danger></span>
            </div>


            <div style="margin-top: 10px">
                <button type="submit" class="btn btn-outline-primary">Войти</button>
            </div>

        </div>
    </form>
</main>

