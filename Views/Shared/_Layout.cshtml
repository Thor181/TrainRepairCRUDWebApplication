<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Вагоноремонтное депо</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/buttons.css" asp-append-version="true"/> 
    <link rel="stylesheet" href="~/TrainRepairCRUDWebApplication.styles.css" asp-append-version="true" />
    <link rel="icon" href="@Url.Content("~/favicon.ico")"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Вагоноремонтное депо</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Directorate" asp-action="Index">Дирекция</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Carriage" asp-action="Index">Типы вагонов</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Railway" asp-action="Index">Пути</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RailwayCarriage" asp-action="Index">Вагоны</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Repair" asp-action="Index">Ремонт</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="TypeRepair" asp-action="Index">Типы ремонта</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Worker" asp-action="Index">Сотрудники</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="BrigadeName" asp-action="Index">Наименования бригад</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Brigade" asp-action="Index">Бригады</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Salary" asp-action="Index">Зарплата</a>
                        </li>
                    </ul>
                </div>
                <a class="nav-link text-dark" asp-controller=Account asp-action=Logout>Выход</a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Вагоноремонтное депо - <a asp-area="" asp-controller="Home" asp-action="Privacy">Политика конфиденциальности</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
